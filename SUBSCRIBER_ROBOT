import socket

# Function to handle incoming connections
def start_server():
    # Create a socket object (AF_INET for IPv4, SOCK_STREAM for TCP)
    server_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

    # Bind the server to a specific IP address and port
    host = '0.0.0.0'  # Accepts connections from any IP
    port = 12345  # Choose a port for communication
    server_socket.bind((host, port))

    # Start listening for incoming connections (max 5 queued connections)
    server_socket.listen(5)
    print(f"Server listening on {host}:{port}")

    # Accept an incoming connection
    client_socket, addr = server_socket.accept()
    print(f"Connected to {addr}")

    # Receive data continuously
    while True:
        data = client_socket.recv(1024).decode()  # Receive up to 1024 bytes
        if not data:
            break  # Break loop if no more data
        print(f"Received message: {data}")

        # Optionally send a response back
        client_socket.send("Message received".encode())

    # Close the connection
    client_socket.close()

# Call the function to start the server
if __name__ == "__main__":
    start_server()
